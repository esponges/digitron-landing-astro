---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import contactData from '../data/contact.json';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Digitrion Copiadoras - Professional printing solutions for your business." />
    <meta name="keywords" content="office printers, multifunction devices, printing solutions, Digitrion Copiadoras" />
    <meta name="author" content="Digitrion Copiadoras" />
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "LocalBusiness",
        "name": "Digitrion Copiadoras",
        "description": "Professional printing solutions for your business.",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "123 Main Street",
          "addressLocality": "Cityville",
          "addressRegion": "Country",
          "postalCode": "12345"
        },
        "telephone": "123-456-7890",
        "email": "info@digitrion.com"
      }
    </script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=DM+Sans:wght@400;500;700&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.4.0/fonts/remixicon.css" rel="stylesheet" />
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body>
    <Header contactData={contactData} />
    <main id="main-content">
      <slot></slot>
    </main>
    <Footer />
  </body>
</html>
